<div class"page-header">
	<h1> New Event </h1> 
</div> 

<%= form_for([@location, @event], html: {class:"form-horizontal"}) do |f| %>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :description %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :description, class: "form-control"%>
    </div>
  </div>
</div>


<div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :date %>
    </div>
    <div class="col-md-4">
      <%= f.date_field :date, class: "form-control"%>
    </div>
  </div>


<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <%= f.submit class: "btn btn-primary btn-md active" %>
      <%= link_to 'cancel', locations_path, class: "btn btn-default" %>
      
    </div>
  </div>
</div>

<% end %>

