<div class"page-header">
	<h1> New Location </h1> 
</div> 

<%= form_for(@location, html: {class:"form-horizontal"}) do |f| %>

<div class="form-group">
  <div class="field">
    <div class="control-label col-md-2">
      <%= f.label :name %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, class: "form-control"%>
    </div>
  </div>
</div>


<div class="form-group">
    <div class="control-label col-md-2">
      <%= f.label :address %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :address, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :zipcode %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :zipcode, class: "form-control"%>
      </div>
    </div>


<div class="form-group">
  <div class="col-md-4 col-md-offset-2">
    <div class="action">
      <%= f.submit class: "btn btn-primary btn-md active" %>
      <%= link_to 'cancel', locations_path, class: "btn btn-default" %>
      
    </div>
  </div>
</div>

<% end %>

